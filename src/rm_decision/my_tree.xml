 <root BTCPP_format="4" >
     <BehaviorTree ID="MainTree">
        <Sequence name="root">
            <checkMode checkmode="1"/>
            <Script code="status:=1" />

            <ReactiveSequence>
                <ReactiveFallback>
                     <checkBlood checkblood="400"/>
                     <Script code="status:=2" />

                     <ReactiveSequence>
                        <checkTime checktime="240"/>
                        <Precondition if="status!=3" else="FAILURE">
                            <movebase goal="2;1;1"/>
                            <Script code="status:=3" />
                        <Precondition/>

                        <Fallback>
                            <Inverter>
                                <Action ID="attracked"/>
                            </Inverter>
                            <Action ID="spinAction"/>
                        </Fallback>

                        <patrol goal="2;1;1;0"/>
                    </ReactiveSequence>

                    <movebase goal="3.5;2.5;1"/>
                </ReactiveFallback> 


                <ReactiveSequence>
                    <!-- <ReactiveFallback> -->
                    <!-- 判断是否被击打 -->
                    <!-- 原地小陀螺 -->
                    <!-- </ReactiveFallback> -->
                    <Sequence>
                        <movebase goal="-1.5;-2;1"/>
                        <KeepRunningUntilFailure>
                            <patrol goal="-1.3;-2;1;0"/>
                        </KeepRunningUntilFailure>
                    </Sequence>
                    
                </ReactiveSequence>
            </ReactiveSequence>

        </Sequence>
     </BehaviorTree>
 </root>