 <root BTCPP_format="4" >
     <BehaviorTree ID="MainTree">
        <Sequence name="root">
            <checkMode checkmode="1"/>
            <Script code="status:=0" />

            <ReactiveSequence>
                <ReactiveFallback>
                     <checkBlood checkblood="400"/>

                     <ReactiveSequence>
                        <checkTime checktime="240"/>

                        <movebase goal="2;1;1" _skipIf="status==3" _onSuccess="status:=3" />

                        <spinAction name="spin" _onRunning="spin:=1" _onSuccess="spin:=0"/>

                        <KeepRunningUntilFailure>
                        <patrol goal="2;1;1;0"/>
                        </KeepRunningUntilFailure>

                    </ReactiveSequence>
                    
                    <ForceFailure>
                    <movebase goal="3.5;2.5;1"  _skipIf="status==4" _onSuccess="status:=4"/>
                    </ForceFailure>
                    <ForceFailure>
                    <spinAction name="spin" _onRunning="spin:=1" _onSuccess="spin:=0"/>
                    </ForceFailure>
                    <checkBlood checkblood="400"/>
                </ReactiveFallback> 


                <Sequence>
                    <spinAction name="spin" _onRunning="spin:=1" _onSuccess="spin:=0"/>
                </Sequence>
                    <movebase goal="-1.5;-2;1" _skipIf="status==1" _onSuccess="status:=1"/>


                <KeepRunningUntilFailure>
                    <patrol goal="-1.3;-2;1;0"/>
                </KeepRunningUntilFailure> 

            </ReactiveSequence>

        </Sequence>
     </BehaviorTree>
 </root>